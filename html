        foot_note: "◊û◊ó◊ô◊®◊ô ◊î◊ñ◊î◊ë ◊ë◊©""◊ó ◊ú◊í◊®◊ù ◊ï◊¢◊ú◊ï◊ú◊ô◊ù ◊ú◊õ◊ú◊ï◊ú ◊¢◊ë◊ï◊ì◊™ ◊ô◊ô◊¶◊ï◊® ◊ê◊ú◊ê ◊ê◊ù ◊¶◊ï◊ô◊ü ◊ê◊ó◊®◊™."
      }
    };

    function setLang(lang){
      const dict = I18N[lang] || I18N.en;
      // Update direction & lang attributes
      const rtl = (lang === 'ar' || lang === 'he');
      document.documentElement.lang = lang;
      document.documentElement.dir = (lang === 'ar' || lang === 'he') ? 'rtl' : 'ltr';

      // Swap alignment when RTL
      document.body.style.textAlign = rtl ? 'right' : 'left';
      // Center hero text regardless
      document.querySelectorAll('.hero').forEach(el=>el.style.textAlign='center');

      // Replace texts
      document.querySelectorAll('[data-i18n]').forEach(el=>{
        const key = el.getAttribute('data-i18n');
        if(dict[key]) el.textContent = dict[key];
      });

      // Update active state on buttons
      document.querySelectorAll('nav.lang button').forEach(btn=>{
        const isActive = btn.getAttribute('data-lang') === lang;
        btn.classList.toggle('active', isActive);
        btn.setAttribute('aria-pressed', isActive ? 'true' : 'false');
      });
    }

    // Init language from URL hash (?lang=ar or #ar)
    const params = new URLSearchParams(window.location.search);
    const urlLang = params.get('lang') || window.location.hash.replace('#','');
    setLang(['en','ar','he'].includes(urlLang) ? urlLang : 'en');

    // Handle clicks
    document.querySelectorAll('nav.lang button').forEach(btn=>{
      btn.addEventListener('click', ()=>{
        const lng = btn.getAttribute('data-lang');
        history.replaceState(null,'',`?lang=${lng}`);
        setLang(lng);
      });
    });
  </script>
</body>
</html>
